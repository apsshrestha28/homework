<!DOCTYPE html>
<html>
  <head>
    <title>BlogOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <%= flash[:notice] || flash[:alert] %>
   
      <nav id="nav_title" class="navbar navbar bg-light">
        <h3 style="color:blue">Blog On Rails</h3>
            <ul class="nav nav-pills flex-column flex-sm-row" >
              <li id="nav_title" class ="nav-item"> <%= link_to 'Home', root_path %> </li>   
              <li id="nav_title"  class="nav-item"><%= link_to 'New Post', new_post_path%></li>
              <%if user_signed_in? %>
                  <span class='text-muted mr-3'>Hello! 
                    <%= link_to "#{current_user.full_name}", edit_user_path(current_user) %>
                  </span>

                  <li id="nav_title" class ="nav-item"><%= link_to "Logout", session_path,method: :delete, 
                                  data: {confirm: "Are you sure you want to log out?"}  %> </li>

                  <% else %>
                  <li id="nav_title" class ="nav-item"><%= link_to "Login", new_session_path%></li>

                  <li id="nav_title" class ="nav-item"><%= link_to "Sign Up", new_user_path %></li>  

                  <% end %>
            </ul>  
            <%= render 'shared/flash_messages' %>
      </nav>
    
    <%= yield %>
  
  </body>
</html>
